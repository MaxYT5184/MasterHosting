<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="<%= typeof description !== 'undefined' ? description : 'MasterHosting - Free website hosting with custom subdomains. Host 1-2 websites absolutely free with 24/7 support!' %>">
    <meta name="keywords" content="<%= typeof keywords !== 'undefined' ? keywords : 'free web hosting, subdomain, free hosting, website hosting, free domain, web hosting service' %>">
    <meta name="author" content="MasterHosting">
    <meta name="robots" content="index, follow">
    <meta name="googlebot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
    <meta name="bingbot" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1">
    
    <!-- Google Search Console Verification (Add your verification code here) -->
    <!-- <meta name="google-site-verification" content="YOUR_VERIFICATION_CODE" /> -->
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://masterhostinig.online/">
    <meta property="og:title" content="<%= title %>">
    <meta property="og:description" content="<%= typeof description !== 'undefined' ? description : 'MasterHosting - Free website hosting with custom subdomains. Host 1-2 websites absolutely free!' %>">
    <meta property="og:image" content="https://masterhostinig.online/favicon.svg">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://masterhostinig.online/">
    <meta property="twitter:title" content="<%= title %>">
    <meta property="twitter:description" content="<%= typeof description !== 'undefined' ? description : 'MasterHosting - Free website hosting with custom subdomains. Host 1-2 websites absolutely free!' %>">
    <meta property="twitter:image" content="https://masterhostinig.online/favicon.svg">
    
    <!-- Google AdSense Verification -->
    <meta name="google-adsense-account" content="ca-pub-330927364569464">
    
    <!-- Google reCAPTCHA -->
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    
    <!-- AdSense will be added after approval -->
    <title><%= title %></title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="apple-touch-icon" href="/favicon.svg">
    <link rel="shortcut icon" type="image/svg+xml" href="/favicon.svg">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
    
    <!-- Structured Data / Schema.org -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "MasterHosting",
      "alternateName": "MasterHosting - Free Website Hosting",
      "url": "https://masterhostinig.online/",
      "description": "Free website hosting with custom subdomains. Host 1-2 websites absolutely free with 24/7 support, 99.9% uptime, and easy setup.",
      "potentialAction": {
        "@type": "SearchAction",
        "target": {
          "@type": "EntryPoint",
          "urlTemplate": "https://masterhostinig.online/?q={search_term_string}"
        },
        "query-input": "required name=search_term_string"
      }
    }
    </script>
    
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "MasterHosting",
      "url": "https://masterhostinig.online/",
      "logo": "https://masterhostinig.online/favicon.svg",
      "description": "Free website hosting provider offering custom subdomains and reliable hosting services.",
      "contactPoint": {
        "@type": "ContactPoint",
        "email": "support@masterhostinig.online",
        "contactType": "Customer Support",
        "availableLanguage": "English"
      },
      "sameAs": [
        "https://www.youtube.com/@max-yt2025"
      ]
    }
    </script>
    
    <% if (page === 'home') { %>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "ItemList",
      "itemListElement": [
        {
          "@type": "SiteNavigationElement",
          "position": 1,
          "name": "About Us",
          "description": "Learn about MasterHosting and our free hosting services",
          "url": "https://masterhostinig.online/about"
        },
        {
          "@type": "SiteNavigationElement",
          "position": 2,
          "name": "Contact",
          "description": "Get in touch with our support team",
          "url": "https://masterhostinig.online/contact"
        },
        {
          "@type": "SiteNavigationElement",
          "position": 3,
          "name": "Updates",
          "description": "Latest news and features from MasterHosting",
          "url": "https://masterhostinig.online/updates"
        },
        {
          "@type": "SiteNavigationElement",
          "position": 4,
          "name": "Login",
          "description": "Access your hosting dashboard",
          "url": "https://masterhostinig.online/login"
        }
      ]
    }
    </script>
    <% } %>
    
    <% if (page !== 'home') { %>
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Home",
          "item": "https://masterhostinig.online/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "<%= title.split(' - ')[0] %>",
          "item": "https://masterhostinig.online/<%= page %>"
        }
      ]
    }
    </script>
    <% } %>
</head>
<body>
    <!-- AMP Auto Ads -->
    <amp-auto-ads type="adsense"
        data-ad-client="ca-pub-3309273645696464">
    </amp-auto-ads>
    
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="nav-wrapper">
                <a href="/" class="logo">
                    <img src="/images/logo.svg" alt="MasterHosting Logo" class="logo-img" onerror="this.style.display='none'">
                    <span class="logo-text">Master<span class="highlight">Hosting</span></span>
                </a>
                
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <i class="fas fa-bars"></i>
                </button>
                
                <ul class="nav-menu" id="navMenu">
                    <li><a href="/" class="<%= page === 'home' ? 'active' : '' %>">Home</a></li>
                    <li><a href="/about" class="<%= page === 'about' ? 'active' : '' %>">About</a></li>
                    <li><a href="/blog" class="<%= page === 'blog' ? 'active' : '' %>">Blog</a></li>
                    <li><a href="/tools" class="<%= page === 'tools' ? 'active' : '' %>">Tools</a></li>
                    <li><a href="/documentation" class="<%= page === 'docs' ? 'active' : '' %>">Docs</a></li>
                    <li><a href="/order" class="<%= page === 'order' ? 'active' : '' %>">Order Now</a></li>
                    <li><a href="/contact" class="<%= page === 'contact' ? 'active' : '' %>">Contact</a></li>
                </ul>
                
                <!-- Auth Section -->
                <div class="auth-section">
                    <a id="loginBtn" href="/login" class="btn btn-primary">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                    
                    <div id="userInfo" class="user-info" style="display: none;">
                        <img id="userPhoto" src="" alt="User" class="user-photo">
                        <div class="user-details">
                            <span id="userName" class="user-name"></span>
                            <button onclick="signOutUser()" class="btn-logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>


    <!-- Main Content -->
    <main>
        <%- body %>
    </main>
    
    <!-- AI Chatbot Widget -->
    <div class="chatbot-widget" id="chatbot">
        <button class="chatbot-toggle" id="chatbotToggle">
            <i class="fas fa-comments"></i>
            <span class="chatbot-badge">24/7</span>
        </button>
        <div class="chatbot-window" id="chatbotWindow">
            <div class="chatbot-header">
                <h3><i class="fas fa-robot"></i> MasterHosting AI Support</h3>
                <button class="chatbot-close" id="chatbotClose">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="chatbot-messages" id="chatbotMessages">
                <div class="bot-message">
                    <div class="message-avatar"><i class="fas fa-robot"></i></div>
                    <div class="message-content">
                        Hello! ðŸ‘‹ I'm your 24/7 AI assistant. How can I help you today?
                    </div>
                </div>
            </div>
            <div class="chatbot-input">
                <input type="text" id="chatbotInput" placeholder="Ask me anything..." />
                <button id="chatbotSend"><i class="fas fa-paper-plane"></i></button>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-grid">
                <div class="footer-col">
                    <h3>MasterHosting</h3>
                    <p>100% FREE website hosting with free subdomains. Fast, reliable, and always free!</p>
                    <div class="social-links">
                        <a href="https://youtube.com/@max-yt2025" target="_blank" aria-label="YouTube">
                            <i class="fab fa-youtube"></i> YouTube
                        </a>
                    </div>
                </div>
                
                <div class="footer-col">
                    <h4>Quick Links</h4>
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/about">About Us</a></li>
                        <li><a href="/updates">Updates</a></li>
                        <li><a href="/#how-it-works">How It Works</a></li>
                    </ul>
                </div>
                
                <div class="footer-col">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="/contact">Contact Us</a></li>
                        <li><a href="/terms">Terms of Service</a></li>
                        <li><a href="/privacy">Privacy Policy</a></li>
                        <li><a href="/#how-it-works">FAQ</a></li>
                    </ul>
                </div>
                
                <div class="footer-col">
                    <h4>Contact Info</h4>
                    <ul class="contact-info">
                        <li><i class="fas fa-envelope"></i> support@masterhostinig.online</li>
                        <li><i class="fas fa-globe"></i> masterhostinig.online</li>
                        <li><i class="fas fa-clock"></i> 24/7 Support</li>
                    </ul>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; <%= new Date().getFullYear() %> MasterHosting. All rights reserved.</p>
                <p class="footer-links">
                    <a href="/terms">Terms of Service</a> | 
                    <a href="/privacy">Privacy Policy</a>
                </p>
            </div>
        </div>
    </footer>

    <!-- Firebase Authentication -->
    <script type="module" src="/js/firebase-config.js"></script>
    
    <!-- Custom JavaScript -->
    <script src="/js/main.js"></script>
    
    <!-- Cookie Consent -->
    <script src="/js/cookies.js"></script>
</body>
</html>
