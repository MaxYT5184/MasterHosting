<% 
const body = `
<!-- Error 429 Page -->
<section class="error-page">
    <div class="container">
        <div class="error-content">
            <div class="error-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h1>429</h1>
            <h2>Too Many Requests</h2>
            <p class="error-message">
                Whoa there! You're going a bit too fast. Please slow down and try again in a moment.
            </p>
            <p class="error-description">
                We've temporarily limited your requests to protect our servers. This helps us keep 
                MasterHosting fast and reliable for everyone. Don't worry - this is just a temporary 
                cooldown period!
            </p>
            
            <div class="error-tips">
                <h3>What can you do?</h3>
                <ul>
                    <li><i class="fas fa-clock"></i> Wait a few seconds and try again</li>
                    <li><i class="fas fa-coffee"></i> Take a quick break (30-60 seconds)</li>
                    <li><i class="fas fa-sync"></i> Refresh the page after waiting</li>
                    <li><i class="fas fa-envelope"></i> Contact us if this keeps happening</li>
                </ul>
            </div>
            
            <div class="countdown-timer">
                <p>You can try again in: <span id="countdown">30</span> seconds</p>
            </div>
            
            <div class="error-actions">
                <a href="/" class="btn btn-primary">
                    <i class="fas fa-home"></i> Go to Homepage
                </a>
                <a href="/contact" class="btn btn-secondary">
                    <i class="fas fa-envelope"></i> Contact Support
                </a>
            </div>
        </div>
    </div>
</section>

<script>
// Countdown timer
let seconds = 30;
const countdownEl = document.getElementById('countdown');

const timer = setInterval(() => {
    seconds--;
    if (countdownEl) {
        countdownEl.textContent = seconds;
    }
    
    if (seconds <= 0) {
        clearInterval(timer);
        if (countdownEl) {
            countdownEl.parentElement.innerHTML = '<p class="text-success"><i class="fas fa-check"></i> You can try again now!</p>';
        }
    }
}, 1000);
</script>
`;
%>
<%- include('layout', { title: '429 - Too Many Requests', page: 'error', body }) %>
